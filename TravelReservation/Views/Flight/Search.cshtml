@model TravelReservation.Models.SearchViewModel

@{
    ViewData["Title"] = "Buscar Vuelos";
}

<head>
    <link rel="stylesheet" href="~/css/flight-search.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>

<!-- Modal -->
<div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="messageModalLabel">Mensaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalMessageBody">
                <!-- Mensaje se mostrará aquí -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<h2>Buscar Vuelos</h2>

<form method="post" id="formSearch">
    
    <div class="form-group citiesFlights">
        <label for="origin">Origen:</label>
        <input type="text" id="origin" name="OriginCode" class="form-control" required />
    </div>
    <div class="form-group citiesFlights">
        <label for="destination">Destino:</label>
        <input type="text" id="destination" name="DestinationCode" class="form-control" required />
    </div>
    <div class="form-group fg-departureDate">
        <label for="departureDate">Fecha de Salida:</label>
        <input type="date" id="departureDate" name="DepartureDate" class="form-control" required />
    </div>
    <div class="form-group fg-adults">
        <label for="adults">Adultos:</label>
        <input type="number" id="adults" name="Adults" class="form-control" min="1" max="10" required />
    </div>
    <button class="btn btn-primary btnBusquedaVuelos">Buscar</button>
</form>

<div id="errorMessages"></div>

<div class="d-none" id="flightResults">
    @if (Model.Results != null && Model.Results.Any())
    {
        <h3>Resultados de Búsqueda:</h3>
        <ul>
            @foreach (var flight in Model.Results)
            {
                <li>@flight</li>
            }
        </ul>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <script src="~/js/flight-search.js"></script>
}
